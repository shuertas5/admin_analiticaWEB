                        div(id="panta_scroll" class="detalle vertical-scrollable")

                            div(style="height: 15px")

                            div(class="mb-2")

                                div(class="col-lg-1")

                                    - if (opcion == "alta") 
                                        - disab = "false"
                                    - if (opcion == "consu") 
                                        - disab = "true"
                                    - if (opcion == "modi") 
                                        - disab = "true"
                                    - if (opcion == "baja") 
                                        - disab = "true"

                                    p(class="etiqueta") Id.
                                    treungc-numer(name="clave" id="clave" formato="#####" maxlength="15" disabled=disab value=empre.num_empre)                                                
                                
