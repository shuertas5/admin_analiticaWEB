                                    p(class="etiqueta") Servidor Base de Datos
                                    treungc-texto(name="servidor_db" id="servidor_db" maxlength="35" disabled=disab value=empre.host)
                                
                            div(class="mb-2")
                            
                                div(class="col-lg-3")

                                    - if (opcion == "alta") 
                                        - disab = "false"
                                    - if (opcion == "consu") 
                                        - disab = "true"
                                    - if (opcion == "modi") 
                                        - disab = "false"
                                    - if (opcion == "baja") 
                                        - disab = "true"

                                    p(class="etiqueta") Contrase&ntilde;a al Crear DB
                                    treungc-texto(name="admin_pas" id="admin_pas" maxlength="35" disabled=disab value=empre.admin_pas)
                                
                        div(class="botonera")

                            div(class="vertical-center")

                                - if (opcion == "baja") 
                                    - boton = "Dar de Baja"
                                - else 
                                    - boton = "Grabar Datos"

                                - if (opcion == "consu") {
                                    - botonhabil = "display: none;"
                                    - boton = ""
                                - } else 
                                    - botonhabil = "width: 180px";

                                button(id="submit" class="btn btn-md btn-primary btn-block" style="display: none;" onclick="ajax_submit('#my_form', 'temporal');")  
                                button(id="submita" class="btn btn-lg btn-primary" type="button" style = botonhabil onclick="$('#submit').click();") #{boton}
                                button(id="cerrar" type="button" class="btn btn-lg btn-secondary" style="width: 180px" onclick="cancelar();") Cerrar Pantalla
                    a(style="display: none" href="/contabilidades" id="accion_cancelar")

            div(style="margin-top: 15px;" class="container")
                footer(class="row")
                    div(class="col-md-12")
