                                div(class="col-lg-6")

                                    - if (opcion == "alta") 
                                        - disab = "false"
                                    - if (opcion == "consu") 
                                        - disab = "true"
                                    - if (opcion == "modi") 
                                        - disab = "false"
                                    - if (opcion == "baja") 
                                        - disab = "true"

                                    p(class="etiqueta") Correo de Usuario
                                    treungc-texto(name="correo_user" id="correo_user" maxlength="80" disabled=disab value=empre.correo_user)

                            div(class="mb-2")
                            
                                div(class="col-lg-5")

                                    - if (opcion == "alta") 
                                        - disab = "false"
                                    - if (opcion == "consu") 
                                        - disab = "true"
                                    - if (opcion == "modi") 
                                        - disab = "false"
                                    - if (opcion == "baja") 
                                        - disab = "true"

                                    p(class="etiqueta") Driver
                                    treungc-texto(name="driver" id="driver" maxlength="100" disabled=disab value=empre.driver)
        
                            div(class="mb-2")
                            
                                div(class="col-lg-9")

                                    - if (opcion == "alta") 
                                        - disab = "false"
                                    - if (opcion == "consu") 
                                        - disab = "true"
                                    - if (opcion == "modi") 
                                        - disab = "false"
                                    - if (opcion == "baja") 
                                        - disab = "true"

                                    p(class="etiqueta") Cadena de Conexion
                                    treungc-texto(name="conexion" id="conexion" maxlength="250" disabled=disab value=empre.cadena_conexion)
        
                            div(class="mb-2")
                            
                                div(class="col-lg-3")

                                    - if (opcion == "alta") 
                                        - disab = "false"
                                    - if (opcion == "consu") 
                                        - disab = "true"
                                    - if (opcion == "modi") 
                                        - disab = "false"
                                    - if (opcion == "baja") 
