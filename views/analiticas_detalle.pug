                                    p(class="etiqueta") Nombre Base de Datos
                                    treungc-texto(name="nombre_db" id="nombre_db" maxlength="35" disabled=disab value=empre.base_datos)
                                

                            div(class="mb-2")
                            
                                div(class="col-lg-3")

                                    - if (opcion == "alta") 
                                        - disab = "false"
                                    - if (opcion == "consu") 
                                        - disab = "true"
                                    - if (opcion == "modi") 
                                        - disab = "false"
                                    - if (opcion == "baja") 
