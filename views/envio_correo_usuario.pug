html(lang="es")

    head

        meta(http-equiv="cache-control" content="max-age=0")
        meta(http-equiv="cache-control" content="no-cache")
        meta(http-equiv="expires" content="0")
        meta(http-equiv="expires" content="Tue, 01 Jan 1980 1:00:00 GMT")
        meta(http-equiv="pragma" content="no-cache")

        meta(charset="UTF-8")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        link(rel="shortcut icon" href="#")
        link(rel="stylesheet" href="./css/bootstrap.min.css")
        link(rel="stylesheet" href="./includes/estilos.css")

    body

        article

            div(class="container")
 
                div(style="font-family: monospace;font-size: 1.0em;margin-top: 5px;")
            
                    div Acceso: 
                        strong Super-Administrador Analiticas
            
                    div(class="divider py-1 bg-secondary")


                p
                    div(style="font-family: monospace;") Enviar mensaje a Analitica: 
                        strong(style="color: red;") #{empre.nombre}
 
                form(id="my_form" action="/envio_correo_usuario" method="post" name="crear")
 
                    input(name="posicion" type="hidden" value=num_e)

                    - if (empre.correo_user != "") {
                        - destinatario = empre.nombre;
                        - destinatario += ' [' + empre.correo_user + ']';
                    - } else {
                        - destinatario = empre.nombre;
                        - destinatario += ' [No tiene definido el email]';
                    - }
            
                    div(class="mb-2")                            
                        div(class="col-lg-8")
                            p(class="etiqueta") Destinatario 
                            treungc-texto(name="destinatario" id="destinatario" maxlength="70" disabled="true" value=destinatario)

                    div(class="mb-2")
                        div(class="col-lg-12")
                            p(class="etiqueta") Asunto 
                            treungc-texto(name="asunto" id="asunto" maxlength="70" disabled="false" value=asunto)


                    div(class="mb-2")
                        div(class="col-lg-12")
                            p(class="etiqueta") Mensaje 
                            treungc-textarea(name="texto" id="texto" cols="80" rows="10" disabled="false" value=texto)

                    input(type="hidden" name="clave" value=clave)

                    div(class="col-xs-12 col-sm-6 col-md-6 col-lg-12" style="margin-top: 20px;")
                        button(id="submit" class="btn btn-lg btn-primary" style="display: none;" onclick="ajax_submit('#my_form', 'temporal');")
                        button(id="submita" class="btn btn-lg btn-primary" type="button" style="width: 200px;margin-right: 10px;" onclick="$('#submit').click();") Mandar Mensaje
                        button(id="cerrar" type="button" class="btn btn-lg btn-secondary" style="width: 200px;" onclick="cancelar();") Cerrar Pantalla

            div(style="margin-top: 15px;" class="container")
                footer(class="row")
                    div(class="col-md-12")
                        h6(style="font-size: 1.0em") !{copyrigth}
    a(style="display: none" href="/contabilidades?recuperado=true" id="accion_cancelar")

script(src="./js/jquery.min.js")
script(src="./js/bootstrap.min.js")
script(src="./treu/formato.js")
script(src="./treu/rutinas_cliente.js")
script(src="./treu/treu-widgets.js")
script.

    function cancelar() {
        document.location = "/contabilidades";
    }